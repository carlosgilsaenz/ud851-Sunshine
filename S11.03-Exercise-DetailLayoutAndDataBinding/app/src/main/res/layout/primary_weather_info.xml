<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tomorrow, December 10"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:layout_marginTop="36dp"
            android:id="@+id/textView_date"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:src="@drawable/art_clouds"
            app:layout_constraintLeft_toLeftOf="@+id/textView_date"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_date"
            app:layout_constraintRight_toLeftOf="@+id/textView_date"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/textView_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Partially Cloudy"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_icon"
            app:layout_constraintLeft_toLeftOf="@+id/imageView_icon"
            app:layout_constraintRight_toRightOf="@+id/imageView_icon" />

        <TextView
            android:id="@+id/textView_high_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55sp"
            tools:text="-1\u00B0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_date"
            app:layout_constraintLeft_toRightOf="@+id/textView_date"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/textView_date" />
        <TextView
            android:id="@+id/textView_low_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            tools:text="-2\u00B0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_high_temp"
            app:layout_constraintRight_toRightOf="@+id/textView_high_temp"
            app:layout_constraintLeft_toLeftOf="@+id/textView_high_temp" />

    </android.support.constraint.ConstraintLayout>
</layout>
