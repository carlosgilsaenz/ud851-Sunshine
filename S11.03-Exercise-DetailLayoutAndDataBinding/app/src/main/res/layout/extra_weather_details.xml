<?xml version="1.0" encoding="utf-8"?>
<layout>
    
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_humidity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/humidity_label"
            android:layout_marginLeft="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" />

        <TextView
            android:id="@+id/textView_pressure_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pressure_label"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_humidity_title"
            android:layout_marginLeft="36dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView_wind_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wind_label"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_pressure_title"
            android:layout_marginLeft="36dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="78%"
            app:layout_constraintLeft_toRightOf="@+id/textView_humidity_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:id="@+id/textView_pressure"
            android:layout_width="47dp"
            android:layout_height="19dp"
            tools:text="998 hPa"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_humidity"
            app:layout_constraintLeft_toRightOf="@+id/textView_humidity_title"
            android:layout_marginLeft="100dp" />

        <TextView
            android:id="@+id/textView_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3 km/h SW"
            app:layout_constraintTop_toBottomOf="@+id/textView_pressure"
            android:layout_marginTop="36dp"
            app:layout_constraintLeft_toRightOf="@+id/textView_humidity_title"
            android:layout_marginLeft="100dp" />

    </android.support.constraint.ConstraintLayout>
</layout>